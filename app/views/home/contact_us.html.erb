<div class="container">
    <div class="jumbotron">
        <h2 class="text-center">Contact Us</h2>
    </div>
    <div class="contact-us-form-section">
        <form action="#" method="post">
            <div class="row">
                <div class="col-md-6 col-xs-12 col-sm-7">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" name="contact_first_name" class="form-control input-lg">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="email" name="contact_email" class="form-control input-lg">
                    </div>
                    <div class="form-group">
                        <label>Subject:</label>
                        <input type="text" name="contact_subject" class="form-control input-lg">
                    </div>
                </div>
                <div class="col-md-6 col-xs-12 col-sm-5">
                    <div class="form-group">
                        <label>Message</label>
                        <textarea class="form-control" style="height:218px;"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-xs-12">
                        <input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>